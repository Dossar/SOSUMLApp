<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        tools:context="org.sosuml.sosumlapp.MainMenu">

        <TextView
            android:id="@+id/mainMenuIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:text="@string/main_menu_header"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="1"
            android:rowCount="4"
            android:useDefaultMargins="true"
            android:id="@+id/mainMenuGridLayout"
            android:layout_below="@id/mainMenuIntro"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/mainMenuBtnRegister"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="center|fill"
                android:layout_row="0"
                android:text="@string/main_menu_btn_register" />

            <Button
                android:id="@+id/mainMenuBtnDonateMeal"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="center|fill"
                android:layout_row="1"
                android:text="@string/main_menu_btn_donate" />

            <Button
                android:id="@+id/mainMenuBtnEvents"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="center|fill"
                android:layout_row="2"
                android:text="@string/main_menu_btn_events" />

            <Button
                android:id="@+id/mainMenuBtnFacebook"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="center|fill"
                android:layout_row="3"
                android:text="@string/main_menu_btn_facebook" />

        </GridLayout>

    </RelativeLayout>
</ScrollView>