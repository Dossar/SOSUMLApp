<resources>

    <!-- Colors from Stream Speeds -->
    <color name="dark_blue">#004b7d</color>
    <color name="light_blue">#28aad1</color>
    <color name="dark_gray">#2e3c48</color>
    <color name="black">#000000</color>
    <color name="white">#ffffff</color>
    <color name="disabled">#000000</color>

    <!-- Colors from SOS site -->
    <color name="header_footer">#222222</color>
    <color name="notification_bar">#080808</color>
    <color name="light_button">#9d9d9d</color>

    <!-- Other colors -->
    <color name="completed_green">#006600</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <!-- Color attributes derived from defined color values above  -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">?android:textColor</item>
        <item name="android:textColorSecondary">?android:textColor</item>

        <!-- Themes applied globally to certain widget types -->
        <item name="android:buttonStyle">@style/AppTheme.Button</item>

        <!-- window background - NEVER "android:background" in themes !!! -->
        <item name="android:colorPrimaryDark">@color/notification_bar</item>
        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="android:navigationBarColor">@color/header_footer</item>

        <!-- Experimental -->
        <item name="actionBarStyle">@style/Widget.AppTheme.ActionBar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppTheme.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppTheme.PopupMenu</item>

    </style>

    <style name="SOSAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/white</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used for the background -->
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="AppElements" parent="Theme.AppCompat.Light">

        <!-- Color attributes derived from defined color values above  -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">

        <!-- action bar background -->
        <item name="background">@color/header_footer</item>

        <!-- action bar elevation -->
        <item name="elevation">4dp</item>
    </style>

    <style name="ThemeOverlay.AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- title text color -->
        <item name="android:textColorPrimary">?android:textColor</item>
        <!-- subtitle text color -->
        <item name="android:textColorSecondary">?android:textColor</item>
        <!-- action menu item text color -->
        <item name="actionMenuTextColor">?android:textColor</item>
        <!-- action menu item icon color - only applies to appcompat-v7 icons :( -->
        <item name="colorControlNormal">?android:textColor</item>
    </style>

    <style name="ThemeOverlay.AppTheme.PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <!-- popup menu background - NEVER "android:background" !!! in themes -->
        <item name="android:colorBackground">@color/header_footer</item>
        <!-- popup menu item text color -->
        <item name="android:textColorPrimary">?android:textColor</item>
    </style>

    <style name="AppTheme.Button" parent="@android:style/Widget.Button">
        <item name="android:textColor">?android:attr/textColor</item>
        <item name="android:background">@color/light_button</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="AppTheme.DisabledButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">?android:attr/textColor</item>
        <item name="android:background">@color/disabled</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

</resources>
